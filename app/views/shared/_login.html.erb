<div class="login">
<% if current_user %>
  <% if current_user.name %>
    <%= current_user.name %>
  <% else %>
    <%= current_user.email %>
  <% end %>
  <%= link_to "Sign out", destroy_user_session_path, method: :delete %>, <%= link_to "Profile", profile_edit_path %>
<% else %>
  <%= link_to "Sign in", new_user_session_path %>, <%= link_to "Sign up", new_user_registration_path %>
<% end %>
</div>
